                        </option>
                        <% } %>
                          <% }else{ %>
                            <h1>No Categories to add</h1>
                            <% } %>
                  </select>
                </div>
              </div>

              <div class="form-group">
                <label for="text">Description</label>
                <input type="text" class="form-control" id="form3Example4c" name="description" required />
              </div>

